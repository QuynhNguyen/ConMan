= form_tag( controller: :fb, action: :update_fb_status) do
	= label_tag(:fb_status,"update fb status")
	= text_field_tag(:fb_status_message)
	= submit_tag 'update status'

- if (@fb_friends_images)
	- index = 0
	- @fb_friends_images.each do |image|
		= link_to image_tag(image), controller: :fb, action: :fb_wall, friend_id: "#{@fb_friends_list[index]}"
		-index+=1
- if (@feed)
	%h3 Latest Feeds
	- @feed.each do |f|
		%p= @graph.get_object(f["actor_id"])["name"].to_s + ": " + f["message"].to_s

%p= link_to "send message", action: :fb_wall, friend_id: :minhta 