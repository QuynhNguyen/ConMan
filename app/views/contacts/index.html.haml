-if (@fb_contacts.count >0)
	%h3 Facebook
	%table{class: "table table-hover"}
		- @fb_contacts.each do |f|
			%tr
				%td= f.name
				%td= link_to image_tag(f.photo), controller: :fb, action: :fb_wall, friend_id: "#{f.friend_id}"

-if (@google_contacts.count >0)
	%h3 Google
	%table{class: "table table-hover"}	
		- @google_contacts.each do |contact|
			%tr
				%td= contact.name
				%td= mail_to "#{contact.email}", "#{contact.email}"

-if (@twitter_contacts.count >0)
	%h3 Twitter
	%table{class: "table table-hover"}	
		- @twitter_contacts.each do |f|
			%tr
				%td= f.name
				%td= link_to image_tag(f.photo), "https://twitter.com/#{f["screen_name"]}"
