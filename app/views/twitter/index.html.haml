
= form_tag( controller: :twitter, action: :tweet) do
	= label_tag(:tweet,"Enter a message")
	= text_field_tag(:message)
	= submit_tag 'Tweet'
- if(@home_timeline)
	%h4 Last 20 tweets
	- @home_timeline.each do |status|
		- message = status["user"]["name"] +": " + status["text"] + " at " + status["created_at"]
		%p= message
%p= #@followers
- if(@friends)
	%h4 Top friends
	%table{class: "table table-hover"}
		- @friends.each do |f|
			%tr
			%td= f["name"] 
			%td= link_to image_tag(f["profile_image_url"]), "https://twitter.com/#{f["screen_name"]}"

