%p= "live count #{@friends.count}"
%p= "db count #{@contacts.count}"

- if (@contacts.count >0)
	%table{class: "table table-hover"}
		- @contacts.each do |f|
			%tr
				%td= f.name
				%td= link_to image_tag(f.photo), controller: :fb, action: :fb_wall, friend_id: "#{f.friend_id}"
- else
	%table{class: "table table-hover"}
		- @friends.each_with_index do |f,index|
			%tr
				%td= f["name"]
				%td= link_to image_tag(@fb_friends_images[index]), controller: :fb, action: :fb_wall, friend_id: "#{f["id"]}"
